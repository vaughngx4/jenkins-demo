pipeline {
  
  agent any
  
  stages {
    
    stage("build") {
      
      steps {
        echo 'This is stage 1 - building'
      }
    }
  
  stages {
    
    stage("test") {
      
      steps {
        echo 'This is stage 2 - testing'
      }
    }
  
  stages {
    
    stage("deploy") {
      
      steps {
        echo 'This is stage 3 - deploying'
      }
    }
  }
}
